<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.classroom.mapper.ClassMemberMapper">

    <insert id="insertOne" parameterType="ClassMember">
        insert into class_member(student_id, classroom_id)
        values(#{studentId}, #{classroomId})
    </insert>

    <select id="selectByStudentAndClassId" parameterType="map" resultType="ClassMember">
        select * from class_member where student_id=#{studentId} and classroom_id=#{classroomId}
    </select>
    <select id="selectStudentIdByClassroomId" resultType="string" parameterType="string">
        select student_id from class_member where classroom_id=#{classroomId}
    </select>


    <!--daily_check ìª½-->

    <insert id="insertDailyCheck" parameterType="DailyCheck">
        insert into daily_check (class_member_id, checked_at)
        values(#{classMemberId}, #{checkedAt})
    </insert>



    <select id="existTodayCheckByClassMemberId" parameterType="int" resultType="boolean">
        select count(*) = 1 as flag from daily_check where class_member_id=#{classMemberId}
        and checked_at=current_date()
    </select>


</mapper>