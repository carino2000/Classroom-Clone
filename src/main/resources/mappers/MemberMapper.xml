<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.app.classroom.mapper.MemberMapper">

    <insert id="insertOne" parameterType="Member">
        insert into member(id, pw, email, name, birthday, gender)
        values (#{id}, #{pw}, #{email}, #{name}, #{birthday}, #{gender})
    </insert>


    <select id="selectById" parameterType="string" resultType="Member">
        select * from member where id=#{id}
    </select>
    <select id="selectByIds" parameterType="list" resultType="Member">
        select * from member where id in
        <foreach collection="list" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </select>


    <update id="updateActiveById" parameterType="String">
        update member set active=true where id=#{id}
    </update>
    <update id="updateImageById" parameterType="map">
        update member set image_url=#{imageUrl} where id=#{id}
    </update>

</mapper>